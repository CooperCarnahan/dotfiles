#!/bin/sh
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."
alias ......="cd ../../../../.."
alias 1='cd -'
alias 2='cd -2'
alias 3='cd -3'
alias 4='cd -4'
alias 5='cd -5'
alias 6='cd -6'
alias 7='cd -7'
alias 8='cd -8'
alias 9='cd -9'

alias src='source ~/.zshrc'
alias lc='colorls'
alias n='nvim'

# Git alias'
alias lg='lazygit'

alias grep='grep --color=auto'

# Fix tmux color issue in VIM
alias tmux="TERM=screen-256color-bce tmux"

# j: jump to directories
alias j='zd'

# v: open recent file in $EDITOR
alias v='v'

alias c='f -ie code'

###########################
#    Platform-Specific    #
###########################

# MacOS
if [ $(uname -s) = "Darwin" ]; then
    alias ls='ls  -G'
# Linux
else
    alias ls='ls --color=auto'
fi

###########################
#      Local Alias'       #
###########################
if [ -f $HOME/.alias.local ]; then
    source $HOME/.alias.local
fi
