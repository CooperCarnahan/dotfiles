#!/bin/sh
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."
alias ......="cd ../../../../.."
alias 1='cd -'
alias 2='cd -2'
alias 3='cd -3'
alias 4='cd -4'
alias 5='cd -5'
alias 6='cd -6'
alias 7='cd -7'
alias 8='cd -8'
alias 9='cd -9'
alias lc='colorls'
alias src='source ~/.zshrc'
alias lg='lazygit'
alias c='f -ie code'

# Git alias'
alias gsur='git submodule update --init --recursive -j 12'
alias gbsc='git branch --show-current'
alias grh='git reset --hard'

if [ $(uname -s) = "Darwin" ]; then
    alias ls='ls  -G'
else
    alias ls='ls --color=auto'
fi
alias grep='grep --color=auto'

# Fix tmux color issue in VIM
alias tmux="TERM=screen-256color-bce tmux"

# Change to directory of selected file #
cf() {
  file=$(f -i ${1})
  cd ${${file}%/*}
}

# cd into recent directories
zd() {
    local dir
    dir="$(fasd -Rdl "$1" | fzf -1 -0 --no-sort +m)" && cd "${dir}" || return 1
}

# j: jump to directories
alias j='zd'

# View recent f files
function v() {
    local file
    file="$(fasd -Rfl "$1" | fzf -1 -0 --no-sort +m)" && $EDITOR "${file}" || return 1
}

# v: open recent file in $EDITOR
alias v='v'

###########################
#      Local Alias'       #
###########################
if [ -f $HOME/.alias.local ]; then
    source $HOME/.alias.local
fi
